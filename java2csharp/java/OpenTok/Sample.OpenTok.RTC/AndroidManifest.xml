<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokbox.android.opentokrtc"
    android:versionCode="9"
    android:versionName="2.5.0"
    >

  <uses-sdk
      android:minSdkVersion="16"
      android:targetSdkVersion="19"
      />

  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.RECORD_AUDIO"/>
  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

  <uses-feature android:name="android.hardware.camera"/>
  <uses-feature android:name="android.hardware.camera.autofocus"/>

  <application
      android:allowBackup="true"
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      >
    <service android:name="com.tokbox.android.opentokrtc.services.ClearNotificationService">
      <intent-filter android:label="@string/clearNotificationService">
        <action android:name="com.tokbox.android.opentokrtc.services.ClearNotificationService"/>
      </intent-filter>
    </service>

    <activity
        android:name="com.tokbox.android.opentokrtc.HomeActivity"
        android:clearTaskOnLaunch="false"
        android:configChanges="orientation"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="com.tokbox.android.opentokrtc.ChatRoomActivity"
        android:clearTaskOnLaunch="false"
        android:configChanges="orientation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        >
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data
            android:host="www.opentokrtc.com"
            android:scheme="http"
            />
        <data
            android:host="www.opentokrtc.com"
            android:scheme="https"
            />
        <data
            android:host="opentokrtc.com"
            android:scheme="http"
            />
        <data
            android:host="opentokrtc.com"
            android:scheme="https"
            />
      </intent-filter>
    </activity>
  </application>

</manifest>